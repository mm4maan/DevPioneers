<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Talk with Pioneer Developers</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="product" content="Metro UI CSS Framework">
    <meta name="description" content="Simple responsive css framework">
    <meta name="author" content="Sergey S. Pimenov, Ukraine, Kiev">

    <!--<link href="css/metro-bootstrap.css" rel="stylesheet">-->
    <link href="../../Content/MetroUI/css/metro-bootstrap.css" rel="stylesheet" />
    <!--<link href="css/metro-bootstrap-responsive.css" rel="stylesheet">-->
    <link href="../../Content/MetroUI/css/metro-bootstrap-responsive.css" rel="stylesheet" />
    <!--<link href="css/iconFont.css" rel="stylesheet">-->
    <link href="../../Content/MetroUI/css/iconFont.css" rel="stylesheet" />
    <!--<link href="css/docs.css" rel="stylesheet">-->
    <link href="../../Content/MetroUI/css/docs.css" rel="stylesheet" />
    <!--<link href="js/prettify/prettify.css" rel="stylesheet">-->
    <link href="../../Scripts/MetroUI/js/prettify/prettify.css" rel="stylesheet" />

    <!-- Load JavaScript Libraries -->
    <!--<script src="js/jquery/jquery.min.js"></script>-->
    <script src="../../Scripts/MetroUI/js/jquery/jquery.min.js"></script>
    <!--<script src="js/jquery/jquery.widget.min.js"></script>-->
    <script src="../../Scripts/MetroUI/js/jquery/jquery.widget.min.js"></script>
    <!--<script src="js/jquery/jquery.mousewheel.js"></script>-->
    <script src="../../Scripts/MetroUI/js/jquery/jquery.mousewheel.js"></script>
    <!--<script src="js/prettify/prettify.js"></script>-->
    <script src="../../Scripts/MetroUI/js/prettify/prettify.js"></script>
    <!--<script src="js/holder/holder.js"></script>-->
    <script src="../../Scripts/MetroUI/js/holder/holder.js"></script>

    <!-- Metro UI CSS JavaScript plugins -->
    <!--<script src="js/load-metro.js"></script>-->
    <script src="../../Scripts/MetroUI/js/load-metro.js"></script>

    <!-- Local JavaScript -->
    <!--<script src="js/docs.js"></script>-->
    <script src="../../Scripts/MetroUI/js/docs.js"></script>
    <!--<script src="js/github.info.js"></script>-->
    <script src="../../Scripts/MetroUI/js/github.info.js"></script>
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("DevPioneers.com", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li>@Html.ActionLink("Answers", "Index", "Answers")</li>
                        <li>@Html.ActionLink("Articles", "Index", "Articles")</li>
                        <li>@Html.ActionLink("Code Samples", "Index", "CodeSamples")</li>
                        <li>@Html.ActionLink("Ask Question", "Index", "AskQuestion")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
